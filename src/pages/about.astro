<style>
    .about-page { padding: 4rem 0 6rem; }

    .mono-dim {
        font-family: var(--font-mono);
        font-size: 0.75rem;
        color: var(--text-muted);
        letter-spacing: 0.05em;
    }

    .about-age-badge {
        display: inline-flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
        padding: 0.75rem 1.5rem;
        border: 1px solid var(--accent);
        border-radius: 4px;
        background: var(--accent-dim);
    }

    .age-number {
        font-family: var(--font-mono);
        font-size: 2rem;
        font-weight: 700;
        color: var(--accent);
        text-shadow: var(--glow);
        line-height: 1;
    }

    .age-label {
        font-family: var(--font-mono);
        font-size: 0.78rem;
        color: var(--text-dim);
        letter-spacing: 0.05em;
    }

    .socials-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: 0.75rem;
        margin-top: 1.5rem;
    }

    .social-card {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
        padding: 1rem 1.25rem;
        border: 1px solid var(--border);
        border-radius: 6px;
        background: var(--bg-1);
        text-decoration: none;
        transition: all 0.2s;
    }

    .social-card:hover {
        border-color: var(--accent);
        background: var(--surface);
        transform: translateY(-2px);
    }

    .social-icon {
        font-size: 1.1rem;
        color: var(--accent);
        font-family: var(--font-mono);
        margin-bottom: 0.25rem;
    }

    .social-name {
        font-family: var(--font-display);
        font-size: 0.88rem;
        font-weight: 700;
        color: var(--text);
    }

    .social-handle {
        font-family: var(--font-mono);
        font-size: 0.7rem;
        color: var(--text-muted);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .about-header { margin-bottom: 5rem; }

    .about-title {
        font-family: var(--font-display);
        font-size: clamp(3rem, 8vw, 6rem);
        font-weight: 800;
        letter-spacing: -0.03em;
        color: var(--text);
        margin-top: 0.5rem;
        margin-bottom: 2rem;
        background: linear-gradient(135deg, var(--text), var(--accent));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .about-intro {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
        max-width: 720px;
    }

    .about-intro p {
        font-size: 1.05rem;
        color: var(--text-dim);
        line-height: 1.85;
    }

    .about-intro em { color: var(--accent); font-style: normal; font-weight: 600; }
    .about-intro strong { color: var(--text); font-weight: 600; }

    .section { margin-bottom: 5rem; }

    .section-title {
        font-family: var(--font-display);
        font-size: 2rem;
        font-weight: 800;
        color: var(--text);
        margin-bottom: 2.5rem;
        letter-spacing: -0.02em;
    }

    /* TIMELINE */
    .timeline {
        display: flex;
        flex-direction: column;
        gap: 0;
    }

    .timeline-item {
        display: grid;
        grid-template-columns: 80px 40px 1fr;
        gap: 0 1rem;
        align-items: start;
    }

    .timeline-year {
        font-family: var(--font-mono);
        font-size: 0.7rem;
        color: var(--text-muted);
        text-align: right;
        padding-top: 0.3rem;
        letter-spacing: 0.05em;
    }

    .timeline-line {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .timeline-dot {
        width: 10px; height: 10px;
        border: 2px solid var(--accent);
        border-radius: 50%;
        background: var(--bg);
        flex-shrink: 0;
        margin-top: 0.3rem;
        box-shadow: 0 0 10px var(--accent-dim);
    }

    .timeline-connector {
        width: 1px;
        background: var(--border);
        flex: 1;
        min-height: 2rem;
    }

    .timeline-content {
        padding-bottom: 2rem;
        display: flex;
        flex-direction: column;
        gap: 0.35rem;
    }

    .timeline-label {
        font-family: var(--font-display);
        font-size: 1rem;
        font-weight: 700;
        color: var(--text);
    }

    .timeline-detail {
        font-size: 0.88rem;
        color: var(--text-dim);
        line-height: 1.6;
    }

    /* SKILLS */
    .skills-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.25rem;
    }

    .skill-card {
        padding: 1.5rem;
        border: 1px solid var(--border);
        border-radius: 8px;
        background: var(--surface);
        transition: all 0.3s;
    }

    .skill-card:hover {
        border-color: var(--border-glow);
        background: var(--surface-2);
    }

    .skill-area {
        font-family: var(--font-display);
        font-size: 0.9rem;
        font-weight: 700;
        color: var(--accent);
        margin-bottom: 1rem;
        letter-spacing: 0.03em;
    }

    .skill-list {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 0.4rem;
    }

    .skill-item {
        font-family: var(--font-mono);
        font-size: 0.78rem;
        color: var(--text-dim);
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }

    .skill-dot { color: var(--accent-2); }

    /* CONTACT */
    .contact-section { padding: 3rem 0; }

    .contact-inner {
        border: 1px solid var(--border-glow);
        border-radius: 12px;
        padding: 3.5rem;
        background: var(--surface);
        background-image: radial-gradient(ellipse at 80% 50%, rgba(0, 255, 136, 0.05), transparent);
    }

    .contact-title {
        font-family: var(--font-display);
        font-size: clamp(2rem, 4vw, 3rem);
        font-weight: 800;
        letter-spacing: -0.02em;
        color: var(--text);
        margin-bottom: 1rem;
    }

    .contact-text {
        font-size: 1rem;
        color: var(--text-dim);
        max-width: 550px;
        line-height: 1.8;
        margin-bottom: 2rem;
    }

    .contact-actions { display: flex; gap: 1rem; }

    .btn-primary {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: var(--accent);
        color: var(--bg);
        padding: 0.8rem 1.8rem;
        border-radius: 4px;
        font-weight: 700;
        font-size: 0.9rem;
        transition: all 0.3s;
        text-decoration: none;
    }

    .btn-primary:hover {
        background: var(--accent-2);
        color: var(--bg);
        box-shadow: 0 0 30px var(--accent-dim);
        transform: translateY(-2px);
    }
</style>