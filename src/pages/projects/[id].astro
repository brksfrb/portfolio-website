        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        transition: transform 0.3s;
    }

    .screenshot-wrap:hover .screenshot-img { transform: scale(1.03); }

    /* REASON */
    .reason-text {
        font-family: var(--font-mono);
        font-size: 0.9rem;
        color: var(--accent-2);
        line-height: 1.8;
        padding: 1.25rem 1.5rem;
        border: 1px solid var(--accent-2);
        border-left: 3px solid var(--accent-2);
        border-radius: 4px;
        background: var(--accent-2-dim);
