    .mono-dim {
        font-family: var(--font-mono);
        font-size: 0.75rem;
        color: var(--text-muted);
    }

    /* SCREENSHOTS */
    .screenshots-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 1rem;
    }

    .screenshot-wrap {
        border: 1px solid var(--border);
