        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .highlight-item {
        display: flex;
        gap: 0.75rem;
        font-size: 0.95rem;
        color: var(--text-dim);
        align-items: flex-start;
        padding: 0.75rem 1rem;
        border: 1px solid var(--border);
        border-left: 3px solid var(--accent-2);
        border-radius: 4px;
        background: var(--surface);
        line-height: 1.5;
    }

    .highlight-arrow {
        color: var(--accent-2);
        font-size: 1.2rem;
        flex-shrink: 0;
        line-height: 1.3;
    }

    /* LIGHTBOX */
    .lightbox {
        position: fixed;
        inset: 0;
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.3s;
    }

    .lightbox.active {
        opacity: 1;
        pointer-events: all;
    }

    .lightbox-backdrop {
        position: fixed;
        inset: 0;
        z-index: 999;
        background: rgba(0, 0, 0, 0.92);
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.3s;
        backdrop-filter: blur(6px);
    }

    .lightbox-backdrop.active {
        opacity: 1;
        pointer-events: all;
    }

    .lightbox-img-wrap {
        position: relative;
        z-index: 1001;
        max-width: 90vw;
        max-height: 85vh;
    }

    #lightbox-img {
        max-width: 90vw;
        max-height: 85vh;
        object-fit: contain;
        border-radius: 6px;
        border: 1px solid var(--border);
        box-shadow: 0 0 60px rgba(0,0,0,0.8);
    }

    .lightbox-close,
    .lightbox-prev,
    .lightbox-next {
        position: fixed;
        z-index: 1002;
        background: var(--surface);
        border: 1px solid var(--border);
        color: var(--text);
        cursor: pointer;
        border-radius: 4px;
        transition: all 0.2s;
        font-size: 1.2rem;
        line-height: 1;
    }

    .lightbox-close:hover,
    .lightbox-prev:hover,
    .lightbox-next:hover {
        border-color: var(--accent);
        color: var(--accent);
    }

    .lightbox-close { top: 1.5rem; right: 1.5rem; padding: 0.5rem 0.8rem; }
    .lightbox-prev { left: 1.5rem; top: 50%; transform: translateY(-50%); padding: 0.75rem 1rem; font-size: 1.8rem; }
    .lightbox-next { right: 1.5rem; top: 50%; transform: translateY(-50%); padding: 0.75rem 1rem; font-size: 1.8rem; }

    .lightbox-counter {
        position: fixed;
        bottom: 1.5rem;
        left: 50%;
        transform: translateX(-50%);
        z-index: 1002;
        font-family: var(--font-mono);
        font-size: 0.78rem;
        color: var(--text-muted);
        background: var(--surface);
        border: 1px solid var(--border);
        padding: 0.3rem 0.8rem;
        border-radius: 3px;
    }
</style>