---
const stats = [
  { label: "Languages", value: "10+", detail: "Python, C++, C#, Rust, Java, JS..." },
  { label: "Total Projects", value: "300+", detail: "Across all languages & platforms" },
  { label: "MS Store Installs", value: "5K+", detail: "Desktop Pet DUCK" },
  { label: "MS Store Views", value: "95K+", detail: "Desktop Pet DUCK" },
  { label: "Largest Project", value: "100+", detail: "files, still growing" },
  { label: "Published Apps", value: "3", detail: "MS Store Â· PlayStore" },
];
---

<section class="stats-section">
  <div class="container">
    <div class="stats-grid">
      {stats.map((stat, i) => (
        <div class="stat-card reveal" style={`transition-delay: ${i * 60}ms`}>
          <div class="stat-value">{stat.value}</div>
          <div class="stat-label">{stat.label}</div>
          <div class="stat-detail">{stat.detail}</div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .stats-section {
    padding: 4rem 0;
    border-top: 1px solid var(--border);
    border-bottom: 1px solid var(--border);
    background: var(--bg-1);
    position: relative;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    gap: 1px;
    background: var(--border);
    border: 1px solid var(--border);
    border-radius: 8px;
    overflow: hidden;
  }

  .stat-card {
    background: var(--bg-1);
    padding: 2rem 1.5rem;
    text-align: center;
    position: relative;
    transition: background 0.3s;
  }

  .stat-card:hover {
    background: var(--surface);
  }

  .stat-value {
    font-family: var(--font-mono);
    font-size: 2.2rem;
    font-weight: 700;
    color: var(--accent);
    text-shadow: var(--glow);
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-family: var(--font-display);
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--text);
    margin-bottom: 0.25rem;
  }

  .stat-detail {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    color: var(--text-muted);
    line-height: 1.3;
  }
</style>
